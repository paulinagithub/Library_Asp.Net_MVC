@model IEnumerable<Library.ViewModel.ReservationViewModel>

@{
    ViewData["Title"] = "ReservationDetails";
}

<h1>ReservationDetails </h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Autor")
            </th>
            <th>
                @Html.DisplayName("Nazwa")
            </th>
            <th>
                @Html.DisplayName("Krótki Opis")
            </th>
            <th>
                @Html.DisplayName("Data rezerwacji")
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Book.Author)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Book.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Book.ShortDescription)
            </td>
            <td>
                @Convert.ToDateTime(item.ReservationDate).ToString("dd/MM/yyyy")
            </td>
        </tr>
}
    </tbody>
</table>

<div>
    <a asp-controller="Book" asp-action="BookList" class="btn btn-primary">Powrót</a>
</div>
